# === REQUIRED ===
TELEGRAM_BOT_TOKEN=put_your_telegram_bot_token_here

# Used to encrypt/decrypt per-user Monobank tokens stored in .cache/users/*.json
# Generate once and keep stable:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
MASTER_KEY=put_your_fernet_key_here

# === OPTIONAL ===
# Local cache directory (default: .cache)
CACHE_DIR=.cache

# OpenAI (optional: bot works without AI, will show facts-only)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=INFO

# === SCHEDULER (optional) ===
# Test mode: makes jobs run very frequently for local dev
SCHED_TEST_MODE=0

# Timezone (default: Europe/Kyiv)
SCHED_TZ=Europe/Kyiv

# Refresh all users every N minutes (prod usually 60â€“180)
SCHED_REFRESH_MINUTES=120

# Cron format: "min hour day month dow"
SCHED_DAILY_REFRESH_CRON=0 6 * * *
SCHED_WEEKLY_CRON=0 9 * * 1
SCHED_MONTHLY_CRON=0 9 1 * *

# === NOT USED (kept intentionally blank) ===
# MONO_TOKEN is NOT required because Monobank token is provided per-user via /connect
# MONO_TOKEN=